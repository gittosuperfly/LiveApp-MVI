<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Text">
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/text_2</item>
        <item name="android:textSize">@dimen/sp_text</item>
    </style>

    <style name="Theme.Text.MAX">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_max</item>
    </style>

    <style name="Theme.Text.H1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_h1</item>
    </style>

    <style name="Theme.Text.H2">
        <item name="android:textColor">@color/text_1</item>
        <item name="android:textSize">@dimen/sp_h2</item>
    </style>

    <style name="Theme.Text.H3">
        <item name="android:textColor">@color/text_1</item>
        <item name="android:textSize">@dimen/sp_h3</item>
    </style>

    <style name="Theme.Text.Note">
        <item name="android:textColor">@color/text_4</item>
        <item name="android:textSize">@dimen/sp_notes</item>
    </style>

    <style name="Theme.Text.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">500</item>
        <item name="android:textSize">@dimen/sp_h3</item>
    </style>

</resources>